<%- include('assets/head') -%>

<body class="text-center">
  <div id="cont-login" class="mx-auto container-sm" style="margin: 20px; padding: 30px; background-color: darkslateblue; width: 500px; text-decoration-color: aliceblue;">
  <form action="/admin" method="post" class="form-signin">
    <h1 class="h3 mb-3 font-weight-normal" style="color: aliceblue;">Login</h1>
    <% if (errors) { %>
    <p style="background:gray; color:white;">Error : <%= errors %></p>
    <% } %>
    <label for="inputUsername" class="sr-only" style="color: aliceblue;">Username</label>
    <input type="text" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus><br>
    <label for="inputPassword" class="sr-only" style="color: aliceblue;">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required><br>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
  </form><br><br>
</div>
</body>
</html>